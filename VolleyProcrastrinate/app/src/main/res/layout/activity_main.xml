<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tau.volleyprocrastrinate.MainActivity2"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/lblTempValue"
        android:layout_width="204dp"
        android:layout_height="37dp"
        android:text="20 degrees C"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_marginStart="35dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblTemperature"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/lblTemperature" />

    <Button
        android:id="@+id/btnNextActivity"
        android:layout_width="204dp"
        android:layout_height="72dp"
        android:onClick="sendMessage"
        android:text="UV Risk"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@+id/lblTemperature"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/lblTemperature"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:text="Temperature"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="54dp"
        android:layout_marginTop="79dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lblHeading"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblHeading"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:text="Today's Forecast"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/lblTempValue"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTraffic"
        style="@android:style/Widget.Button"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="displayStats"
        android:text="Stats"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="2dp" />

    <Button
        android:id="@+id/btnVpc"
        style="@android:style/Widget.Button"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="displayVpcInfo"
        android:text="VPC"
        app:layout_constraintRight_toLeftOf="@+id/btnTraffic"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="2dp" />


</android.support.constraint.ConstraintLayout>
